{
  "name": "@nclslbrn/plot-writer",
  "version": "0.0.2-a",
  "type": "module",
  "main": "./dist/plot-writer.umd.cjs",
  "module": "./dist/plot-writer.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default" : "./dist/plot-writer.js",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "default": "./dist/plot-writer.umd.cjs",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.cjs",
    "dist/*.d.ts"
  ],
  "scripts": {
    "dev": "vite",
    "test": "jest",
    "preview": "vite preview",
    "build": "tsc --project tsconfig.build.json && vite build",
    "deploy": "npm publish",
    "demo:dev": "vite demo/ --host",
    "demo:build": "tsc && vite build demo/"
  },
  "description": "Write (SVG) text with JavaScript",
  "keywords": [
    "SVG text",
    "PenPlotter",
    "font-face",
    "Vector font"
  ],
  "homepage": "https://github.com/nclslbrn/plot-writer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nclslbrn/plot-writer.git"
  },
  "bugs": {
    "url": "https://github.com/nclslbrn/plot-writer/issues"
  },
  "author": {
    "name": "nclslbrn",
    "email": "nclslbrn@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.9.0"
  },
  "publishConfig": {
    "@nclslbrn:registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=16"
  }
}
